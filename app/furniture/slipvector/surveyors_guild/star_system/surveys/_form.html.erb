<%- data = {} %>
<%- data[:turbo_frame] = local_assigns[:turbo_frame] if local_assigns[:turbo_frame] %>

<%= turbo_frame_tag(survey) do %>
  <%= form_with(model: survey.location, data: data) do |f| %>
    <%= f.hidden_field :status, value: :in_progress %>


    <%= f.label :material_dice_count, "EnrgSensors"%>
    <%= f.number_field :energy_dice_count %>
    <%= render "error", attribute: :energy_dice_count, model: survey %>

    <%= f.label :life_dice_count, "LifeSensors"%>
    <%= f.number_field :life_dice_count %>
    <%= render "error", attribute: :life_dice_count, model: survey %>

    <%= f.label :material_dice_count, "MatrSensors"%>
    <%= f.number_field :material_dice_count %>
    <%= render "error", attribute: :material_dice_count, model: survey %>

    <%= f.label :oddity_dice_count, "OddySensors" %>
    <%= f.number_field :oddity_dice_count %>
    <%= render "error", attribute: :oddity_dice_count, model: survey %>


    <%= f.submit "Survey", class: "mt-2" %>
  <%- end %>
<%- end %>
